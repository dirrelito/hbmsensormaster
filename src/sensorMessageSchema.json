{
    "$id": "http://localhost:1337/sensorMessageSchema",
    "type": "object",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "required": [
      "periodStart",
      "periodDurationSeconds",
      "unit",
      "avg",
      "stdDev",
      "nObs"
    ],
    "additionalProperties": false,
    "properties": {
      "periodStart": {
        "type": "string",
        "format": "date-time"
      },
      "periodDurationSeconds": {
        "type": "integer",
        "minimum": 1
      },
      "unit": {
        "type": "string",
        "enum": [
          "Celsius"
        ]
      },
      "avg": {
        "type": "number"
      },
      "stdDev": {
        "type": "number"
      },
      "nObs": {
        "type": "integer",
        "minimum": 1
      }
    }
  }